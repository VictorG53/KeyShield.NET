@page "/coffre/{identifiant}/add"
@attribute [Authorize]
@inject NavigationManager Navigation
@inject IDownstreamApi DownstreamApi

<PageTitle>Ajouter une donnée</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1>Ajouter une donnée au coffre</h1>
            <p>Identifiant du coffre : @Identifiant</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form @onsubmit="SaveData">
                        <div class="mb-3">
                            <label for="dataNom" class="form-label">Nom de l'entrée</label>
                            <input type="text" class="form-control" id="dataNom" @bind="NomEntree" required/>
                        </div>

                        <div class="mb-3">
                            <label for="dataNomUtilisateur" class="form-label">Nom d'utilisateur</label>
                            <input type="text" class="form-control" id="dataNomUtilisateur" @bind="Nom" required/>
                        </div>

                        <div class="mb-3">
                            <label for="dataMotDePasse" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control" id="dataMotDePasse" @bind="MotDePasse" rows="3"
                                   required/>
                        </div>

                        <div class="mb-3">
                            <label for="dataCommentaire" class="form-label">Commentaire</label>
                            <textarea class="form-control" id="dataCommentaire" @bind="Commentaire" rows="2"></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="GoBack">Annuler</button>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
